
@{
    ViewData["Title"] = "CommentsReport";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    string[] TableHeaders = new string[] {
        "FirstName"
        ,"MiddleInitial"
        ,"LastName"
        ,"EmailAddress"
        ,"FileName"
        ,"Title"
        ,"ContentComments"
        ,"WrittenDocumentComments"
        ,"PotentialForOralPresentationComments"
        ,"OverallRatingComments"
    };
}

<h1>CommentsReport</h1>

<div class="report-buttons">
    <a asp-action="ScoreReport" asp-controller="Admin"><div class="button author-sign-up-button">Score report</div></a>
    <a asp-action="AuthorReport" asp-controller="Admin"><div class="button reviewer-sign-up-button">Author report</div></a>
    <a asp-action="ReviewerReport" asp-controller="Admin"><div class="button author-sign-up-button">Reviewer report</div></a>
    <a asp-action="CommentReport" asp-controller="Admin"><div class="button reviewer-sign-up-button">Comment report</div></a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                @{
            foreach (var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>

        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var Data in Model)
                    {
                        <tr>
                            <td>@Data.FirstName</td>
                            <td>@Data.MiddleInitial</td>
                            <td>@Data.LastName</td>
                            <td>@Data.EmailAddress</td>
                            <td>@Data.FileName</td>
                            <td>@Data.Title</td>
                            <td>@Data.ContentComments</td>
                            <td>@Data.WrittenDocumentComments</td>
                            <td>@Data.PotentialForOralPresentationComments</td>
                            <td>@Data.OverallRatingComments</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>